
#include <bits/stdc++.h>

using namespace std;

#define rep(i,a,b) for(int i=a;i<b;++i)
typedef long long ll;
typedef vector<int> vi;

int main()
{
	int t;
	cin>>t;
	while(t--)
	{
		int n;
		cin>>n;
		if(n%2==0)
		{
			for(int i=1;i<=n;++i)
			{
				if(i%2==1)
					cout<<i+1<<" ";
				else
					cout<<i-1<<" ";
			}
		}
		else
		{
			for(int i=1;i<=n-3;++i)
			{
				if(i%2==1)
					cout<<i+1<<" ";
				else
					cout<<i-1<<" ";
			}
			cout<<n-1<<" "<<n<<" "<<n-2<<" ";
		}
		cout<<endl;
	}
	return 0;
}
